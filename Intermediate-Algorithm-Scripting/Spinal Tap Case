function spinalCase(str) {
  // "It's such a fine line between stupid, and clever."
  // --David St. Hubbins
  
    // check for spaces and underscores in str
    var pattern = /[\s_]/g;
    // function to use if no spaces/_ are present
    function noSpace(str) {
      return "-" + str.toLowerCase();
    }
  
  // if there are spaces/_
  if (pattern.test(str) === true) {
    // str is now str with space/_ removed 
    str = str.replace(pattern, "-");
    // str becomes spinal tap case with toLowerCase
    return str.toLowerCase();
  } else {
    // if no space/_ present, return modified spinal tap case str
    return str.replace(/[A-Z]/g, noSpace);
  }
  
}

spinalCase('This Is Spinal Tap');
